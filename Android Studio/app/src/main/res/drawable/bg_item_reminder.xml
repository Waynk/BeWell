<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 填充背景顏色，可自行調整 -->
    <solid android:color="#FFFFFF" />
    <!-- 圓角半徑 -->
    <corners android:radius="8dp" />
    <!-- 邊框線，可自行調整 -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />
    <!-- 內邊距 -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
