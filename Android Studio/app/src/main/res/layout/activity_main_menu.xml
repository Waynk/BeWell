<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:fitsSystemWindows="true">

    <!-- 可捲動內容：把 bottomPanel 放進來當最後一張卡片 -->
    <ScrollView
        android:id="@+id/contentScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:clipToPadding="false"
        android:background="#FAFAFA"
        android:paddingBottom="120dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 主標題 -->
            <TextView
                android:id="@+id/titleMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="健康功能總覽"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:letterSpacing="0.03" />

            <View
                android:layout_width="72dp"
                android:layout_height="3dp"
                android:layout_gravity="center_horizontal"
                android:background="#26C6DA"
                android:layout_marginBottom="16dp"/>

            <!-- 功能卡片外框 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/bg_feature_card"
                android:elevation="8dp"
                android:padding="16dp">

                <!-- 功能網格 -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:useDefaultMargins="true"
                    android:alignmentMode="alignMargins"
                    android:gravity="center">

                    <!-- 胡的頁面 -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1">

                        <ImageButton
                            android:id="@+id/btnSecondActivity"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/btn_border"
                            android:src="@drawable/ic_blood_pressure"
                            android:scaleType="centerInside"
                            android:adjustViewBounds="true"
                            android:elevation="6dp"
                            android:padding="16dp"
                            android:contentDescription="胡的頁面"
                            android:foreground="?attr/selectableItemBackgroundBorderless" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="血壓搜尋"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold"
                            android:letterSpacing="0.02" />
                    </LinearLayout>

                    <!-- 體重分析 -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1">

                        <ImageButton
                            android:id="@+id/btnbmiActivity"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/btn_border"
                            android:src="@drawable/ic_scale"
                            android:scaleType="centerInside"
                            android:adjustViewBounds="true"
                            android:elevation="6dp"
                            android:padding="16dp"
                            android:contentDescription="體重"
                            android:foreground="?attr/selectableItemBackgroundBorderless" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="體重分析"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold"
                            android:letterSpacing="0.02" />
                    </LinearLayout>

                    <!-- 健康分析 -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1">

                        <ImageButton
                            android:id="@+id/btnGoToAnalysis"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/btn_border"
                            android:src="@drawable/analysis"
                            android:scaleType="centerInside"
                            android:adjustViewBounds="true"
                            android:elevation="6dp"
                            android:padding="16dp"
                            android:contentDescription="健康分析"
                            android:foreground="?attr/selectableItemBackgroundBorderless" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="健康分析"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold"
                            android:letterSpacing="0.02" />
                    </LinearLayout>

                    <!-- 運動建議 -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1">

                        <ImageButton
                            android:id="@+id/btnGoToExercise"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/btn_border"
                            android:src="@drawable/exercise"
                            android:scaleType="centerInside"
                            android:adjustViewBounds="true"
                            android:elevation="6dp"
                            android:padding="16dp"
                            android:contentDescription="運動建議"
                            android:foreground="?attr/selectableItemBackgroundBorderless" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="運動建議"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold"
                            android:letterSpacing="0.02" />
                    </LinearLayout>

                    <!-- 健康教學 -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1">

                        <ImageButton
                            android:id="@+id/btnAnxiety"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/btn_border"
                            android:src="@drawable/education"
                            android:scaleType="centerInside"
                            android:adjustViewBounds="true"
                            android:elevation="6dp"
                            android:padding="16dp"
                            android:contentDescription="健康教學"
                            android:foreground="?attr/selectableItemBackgroundBorderless" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="健康教學"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold"
                            android:letterSpacing="0.02" />
                    </LinearLayout>

                    <!-- 醫院掛號 -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1">

                        <ImageButton
                            android:id="@+id/btnhosActivity"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/btn_border"
                            android:src="@drawable/hospital"
                            android:scaleType="centerInside"
                            android:adjustViewBounds="true"
                            android:elevation="6dp"
                            android:padding="16dp"
                            android:contentDescription="醫院掛號"
                            android:foreground="?attr/selectableItemBackgroundBorderless" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="醫院掛號"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold"
                            android:letterSpacing="0.02" />
                    </LinearLayout>

                    <!-- 就醫行事曆 -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1">

                        <ImageButton
                            android:id="@+id/btnAppointmentActivity"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/btn_border"
                            android:src="@drawable/hospitalcalender"
                            android:scaleType="centerInside"
                            android:adjustViewBounds="true"
                            android:elevation="6dp"
                            android:padding="16dp"
                            android:contentDescription="就醫行事曆"
                            android:foreground="?attr/selectableItemBackgroundBorderless" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="就醫行事曆"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold"
                            android:letterSpacing="0.02" />
                    </LinearLayout>

                    <!-- 藥物提醒 -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1">

                        <ImageButton
                            android:id="@+id/btnWeight"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/btn_border"
                            android:src="@drawable/ic_medicine"
                            android:scaleType="centerInside"
                            android:adjustViewBounds="true"
                            android:elevation="6dp"
                            android:padding="16dp"
                            android:contentDescription="藥物提醒"
                            android:foreground="?attr/selectableItemBackgroundBorderless" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="藥物提醒"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold"
                            android:letterSpacing="0.02" />
                    </LinearLayout>

                    <!-- 其他提醒 -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1">

                        <ImageButton
                            android:id="@+id/btnMedications"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/btn_border"
                            android:src="@drawable/reminder"
                            android:scaleType="centerInside"
                            android:adjustViewBounds="true"
                            android:elevation="6dp"
                            android:padding="16dp"
                            android:contentDescription="其他提醒"
                            android:foreground="?attr/selectableItemBackgroundBorderless" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="其他提醒"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold"
                            android:letterSpacing="0.02" />
                    </LinearLayout>

                    <!-- 求助通知 -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1">

                        <ImageButton
                            android:id="@+id/btnHelpNoticeActivity"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/btn_border"
                            android:src="@drawable/help"
                            android:scaleType="centerInside"
                            android:adjustViewBounds="true"
                            android:elevation="6dp"
                            android:padding="16dp"
                            android:contentDescription="求助通知"
                            android:foreground="?attr/selectableItemBackgroundBorderless" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="求助通知"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold"
                            android:letterSpacing="0.02" />
                    </LinearLayout>

                    <!-- 焦慮指數 -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1">

                        <ImageButton
                            android:id="@+id/btnanxietyindex"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/btn_border"
                            android:src="@drawable/anxiety"
                            android:scaleType="centerInside"
                            android:adjustViewBounds="true"
                            android:elevation="6dp"
                            android:padding="16dp"
                            android:contentDescription="焦慮指數"
                            android:foreground="?attr/selectableItemBackgroundBorderless" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="焦慮指數"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold"
                            android:letterSpacing="0.02" />
                    </LinearLayout>
                    <!-- 👤 個人資料管理 -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1">

                        <ImageButton
                            android:id="@+id/btnProfileManager"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/btn_border"
                            android:src="@drawable/ic_profile"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        android:elevation="6dp"
                        android:padding="16dp"
                        android:contentDescription="個人資料管理"
                        android:foreground="?attr/selectableItemBackgroundBorderless" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="個人資料"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold"
                            android:letterSpacing="0.02" />
                    </LinearLayout>


                </GridLayout>
            </FrameLayout>

            <!-- ✅ 今日小叮嚀：作為內容最後一張卡片 -->
            <LinearLayout
                android:id="@+id/bottomPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@android:color/transparent"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_quote_box"
                    android:elevation="8dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/quoteTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今日小叮嚀"
                        android:textColor="#212121"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/quoteText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#388E3C"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:maxLines="3"
                        android:ellipsize="end" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- 左下個人資訊 -->
    <ImageButton
        android:id="@+id/btnProfile"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_circle_button"
        android:src="@drawable/ic_info"
        android:scaleType="centerInside"
        android:padding="10dp"
        android:elevation="10dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="查看帳號" />

    <!-- 右下主助理鍵（沿用你的 frogButton id 與圖示） -->
    <ImageButton
        android:id="@+id/frogButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_circle_button"
        android:src="@drawable/ai_chat"
        android:scaleType="fitCenter"
        android:padding="10dp"
        android:elevation="10dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="AI 聊天機器人" />

        <!-- ✅ 換成 ImageButton 才能播 GIF -->
        <ImageButton
            android:id="@+id/btnAiChat"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_circle_button_small"
            android:scaleType="centerInside"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@id/frogButton"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="AI 聊天"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:elevation="8dp"/>

        <ImageButton
            android:id="@+id/btnAiAutomation"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_circle_button_small"
            android:scaleType="centerInside"
            android:padding="10dp"
            android:contentDescription="AI 自動化"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            android:layout_above="@id/frogButton"
            android:layout_alignEnd="@id/frogButton"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="12dp"
            android:elevation="8dp"/>
</RelativeLayout>
