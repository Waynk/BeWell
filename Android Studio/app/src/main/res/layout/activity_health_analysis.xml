<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4FF"
    android:padding="20dp">

    <!-- 🧠 標題卡片 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/title_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="10dp"
        android:backgroundTint="#E3F2FD"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🩺 健康分析"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:textColor="#1565C0"
                android:shadowColor="#B2DFDB"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ✅ 體重與血壓分析按鈕區塊 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/analysis_button_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/title_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_today_weight"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="💪 今日體重"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp"
                    app:cornerRadius="16dp"
                    android:fontFamily="sans-serif-medium"
                    app:backgroundTint="#4DB6AC" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_range_weight"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="📆 區間體重"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="16dp"
                    android:fontFamily="sans-serif-medium"
                    app:backgroundTint="#26A69A" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_today_bp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="❤️‍🔥 今日血壓"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp"
                    app:cornerRadius="16dp"
                    android:fontFamily="sans-serif-medium"
                    app:backgroundTint="#E53935" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_range_bp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="📅 區間血壓"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="16dp"
                    android:fontFamily="sans-serif-medium"
                    app:backgroundTint="#C62828" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 🔍 分析與圖表操作 -->
    <LinearLayout
        android:id="@+id/action_button_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/analysis_button_group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/analyze_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="🔍 分析"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"
            android:paddingVertical="14dp"
            app:cornerRadius="16dp"
            android:fontFamily="sans-serif-medium"
            app:backgroundTint="#1565C0" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/chart_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="📊 顯示圖表"
            android:textColor="#FFFFFF"
            android:paddingVertical="14dp"
            app:cornerRadius="16dp"
            android:fontFamily="sans-serif-medium"
            app:backgroundTint="#0D47A1" />
    </LinearLayout>

    <!-- 🧠 GPT 分析結果顯示區塊 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/gpt_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/action_button_row"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:id="@+id/scroll_gpt_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <TextView
                android:id="@+id/result_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:textSize="16sp"
                android:textColor="#444444"
                android:lineSpacingExtra="8dp"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                android:text="分析結果將顯示於此。" />
        </ScrollView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
