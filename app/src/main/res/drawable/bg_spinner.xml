<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景顏色 -->
    <solid android:color="#FFFFFF" />

    <!-- 邊框 -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" /> <!-- 淡灰色外框 -->

    <!-- 圓角 -->
    <corners android:radius="12dp" />

    <!-- 內邊距 -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
