<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 背景色，可根據需要修改 -->
    <solid android:color="#FFFFFF" />

    <!-- 邊框設定：寬度與顏色 -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

    <!-- 圓角設定 -->
    <corners android:radius="8dp" />

    <!-- 內邊距設定，讓內容不會貼邊 -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>
