<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 標題區塊 -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_weight_setup"
            android:textSize="22sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="6dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"
            android:layout_marginBottom="14dp" />

        <!-- 警示提醒 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reminder_fill_truthfully"
            android:textColor="@color/warning_red"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- 性別選擇區 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_select_gender"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btnMale"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/gender_male"
                android:textSize="16sp"
                android:backgroundTint="@color/gender_male"
                android:textColor="@color/white"
                android:layout_marginEnd="10dp"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/btnFemale"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/gender_female"
                android:textSize="16sp"
                android:backgroundTint="@color/gender_female"
                android:textColor="@color/white"
                style="?android:attr/buttonBarButtonStyle" />
        </LinearLayout>

        <!-- 身高輸入 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_input_height"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <AutoCompleteTextView
                android:id="@+id/etHeight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/hint_input_height"
                android:inputType="numberDecimal"
                android:padding="14dp"
                android:background="@drawable/bg_edittext"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/btnHeightVoice"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_mic"
                android:background="@android:color/transparent"
                android:contentDescription="@string/desc_mic_height" />
        </LinearLayout>

        <!-- 年齡輸入 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_input_age"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="28dp">

            <AutoCompleteTextView
                android:id="@+id/etAge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/hint_input_age"
                android:inputType="number"
                android:padding="14dp"
                android:background="@drawable/bg_edittext"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/btnAgeVoice"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_mic"
                android:background="@android:color/transparent"
                android:contentDescription="@string/desc_mic_age" />
        </LinearLayout>

        <!-- 說明文字 -->
        <TextView
            android:id="@+id/tvWhyExplain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/explain_why"
            android:textSize="13sp"
            android:textColor="@color/gray"
            android:layout_marginBottom="20dp" />

        <!-- 完成按鈕 -->
        <Button
            android:id="@+id/btnFinish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_start_analysis"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@color/purple_500"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_primary"
            android:padding="14dp" />

        <!-- 備註 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/disclaimer"
            android:textSize="13sp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:layout_marginTop="20dp" />
    </LinearLayout>
</ScrollView>
