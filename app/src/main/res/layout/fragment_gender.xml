<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FAFAFA"
    android:gravity="center_horizontal">

    <!-- 標題 -->
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header_instruction"
        android:textColor="#212121"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

    <!-- 提示 -->
    <TextView
        android:id="@+id/tvHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header_hint"
        android:textColor="#D32F2F"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal" />

    <!-- 分隔線 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        android:layout_marginBottom="20dp" />

    <!-- 標籤 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_gender"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

    <!-- 性別選擇按鈕 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btnMale"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_male"
            android:background="@drawable/bg_gender_selector"
            android:contentDescription="@string/gender_male"
            android:scaleType="centerInside"
            android:elevation="4dp"
            android:padding="8dp" />

        <ImageButton
            android:id="@+id/btnFemale"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_female"
            android:background="@drawable/bg_gender_selector"
            android:contentDescription="@string/gender_female"
            android:layout_marginStart="24dp"
            android:scaleType="centerInside"
            android:elevation="4dp"
            android:padding="8dp" />
    </LinearLayout>

    <!-- 錯誤提示 -->
    <TextView
        android:id="@+id/tvErrorGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal" />

    <!-- 下一步按鈕 -->
    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_next"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="32dp"
        android:padding="14dp"
        android:elevation="2dp" />
</LinearLayout>
